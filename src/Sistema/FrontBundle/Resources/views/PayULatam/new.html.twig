{% extends "SistemaFrontBundle::layout.html.twig" %}

{% block title %}
{{ parent() }} - {{ 'views.new.creation'|trans({'%entity%': config.entityName}, 'MWSimpleAdminCrudBundle') }}
{% endblock %}

{% block content %}
    {% form_theme form 'MWSimpleAdminCrudBundle:widget:fields.html.twig' %}
    <div id="page-wrapper" >
        <div id="page-inner">
                <div class="panel panel-default center-block">
                    <div class="panel-heading">
                        <h3 class="panel-title center-block">
                            Adquirir el servicio Premium por 500$ pesos Argentinos
                        </h3>
                    </div>
                    <div class="panel-body">
                        {{ form_start(form) }}
                        {{ form(form) }}
                        {{ form_end(form) }}
                    </div>
                </div>

        </div>
    </div>
{% endblock %}

{% block javascript %}
    {{ parent() }}
    <script src="{{ asset('bundles/mwsimpleadmincrud/js/widget.js') }}"></script>
{% endblock %}
