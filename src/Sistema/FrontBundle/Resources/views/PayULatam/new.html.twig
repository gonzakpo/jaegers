{% extends "SistemaFrontBundle::layout.html.twig" %}

{% block title %}
{{ parent() }} - {{ 'views.new.creation'|trans({'%entity%': config.entityName}, 'MWSimpleAdminCrudBundle') }}
{% endblock %}

{% block content %}
    {% form_theme form 'MWSimpleAdminCrudBundle:widget:fields.html.twig' %}
    <div id="page-wrapper" >
        <div id="page-inner">
                <div class="panel panel-default center-block">
                    <div class="panel-heading">
                        <h3 class="panel-title center-block">
                            Adquirir el servicio premium
                        </h3>
                    </div>
                    <div class="panel-body">
                        {{ form_start(form) }}
                        {{ form(form) }}
            <input type="image" border="0" alt="" src="http://www.payulatam.com/img_botones_herramientas/boton_pagar_mediano.png" onClick="this.form.urlOrigen.value = window.location.href;"/>
                        {{ form_end(form) }}
                    </div>
                </div>
                <div class="col-lg-9">
                    <div class="float-left col-lg-3">
                        <a class="btn btn-info col-lg-11" href="{{ path(config.index) }}">
                            {{ 'views.recordactions.backtothelist'|trans({}, 'MWSimpleAdminCrudBundle') }}
                        </a>
                    </div>
                </div>
        </div>
    </div>
{% endblock %}

{% block javascript %}
    {{ parent() }}
    <script src="{{ asset('bundles/mwsimpleadmincrud/js/widget.js') }}"></script>
{% endblock %}
